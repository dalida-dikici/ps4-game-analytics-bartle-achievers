# 1. GEREKLİ KÜTÜPHANELER
# --------------------------------------------

import pandas as pd
import numpy as np

import matplotlib.pyplot as plt
import seaborn as sns

from sklearn.model_selection import train_test_split
from sklearn.linear_model import LinearRegression, LogisticRegression
from sklearn.tree import DecisionTreeClassifier
from sklearn.metrics import mean_squared_error, r2_score, accuracy_score

# --------------------------------------------
# 2. VERİ SETİNİ YÜKLEME
# --------------------------------------------

# Kaggle'dan indirdiğin CSV dosyasını aynı klasöre koy:
# ps4_games.csv gibi

df = pd.read_csv("ps4_games.csv")

# İlk 5 satıra bakalım
df.head()

# --------------------------------------------
# 3. GENEL BİLGİLER
# --------------------------------------------

df.shape          # satır, sütun sayısı
df.info()         # veri tipleri
df.describe()     # temel istatistik özet

# --------------------------------------------
# 4. EKSİK VERİ KONTROLÜ
# --------------------------------------------

df.isnull().sum()

# --------------------------------------------
# 5. KORELASYON ANALİZİ
# --------------------------------------------

plt.figure(figsize=(10,6))
sns.heatmap(df.corr(), annot=True, cmap="coolwarm")
plt.title("PS4 Games Correlation Matrix")
plt.show()

# --------------------------------------------
# 6. RATING İÇİN LINEAR REGRESSION
# --------------------------------------------

X = df[["score", "leaderboard", "gamers", "comp_perc", 
        "min_comp_time", "max_comp_time"]]

y = df["rating"]

# Train - Test bölme
X_train, X_test, y_train, y_test = train_test_split(
    X, y, test_size=0.25, random_state=42
)

# Model kurma
lr_model = LinearRegression()
lr_model.fit(X_train, y_train)

# Tahmin
y_pred = lr_model.predict(X_test)

# Performans
mse = mean_squared_error(y_test, y_pred)
r2 = r2_score(y_test, y_pred)

print("MSE:", mse)
print("R2 Score:", r2)

# --------------------------------------------
# 7. BASİT BİR SINIFLANDIRMA (LOGISTIC REGRESSION)
# --------------------------------------------

# Achiever benzeri basit bir etiket üretelim (örnek)
# Score'u yüksek olanları 1, düşük olanları 0 yapıyoruz

df["achiever_label"] = np.where(df["score"] > df["score"].median(), 1, 0)

X_cls = df[["score", "leaderboard", "gamers", "comp_perc"]]
y_cls = df["achiever_label"]

X_train, X_test, y_train, y_test = train_test_split(
    X_cls, y_cls, test_size=0.25, random_state=42
)

log_model = LogisticRegression()
log_model.fit(X_train, y_train)

y_pred_cls = log_model.predict(X_test)

acc = accuracy_score(y_test, y_pred_cls)

print("Classification Accuracy:", acc)

# --------------------------------------------
# 8. KARAR AĞACI (DECISION TREE)
# --------------------------------------------

tree_model = DecisionTreeClassifier(max_depth=4, random_state=42)
tree_model.fit(X_train, y_train)

tree_pred = tree_model.predict(X_test)

tree_acc = accuracy_score(y_test, tree_pred)

print("Decision Tree Accuracy:", tree_acc)

